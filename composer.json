    },

    "require": {
        "components/jquery": "~1.1",
        "monolog/monolog" : "~1.1",
        "mozillal10n/bugzilla": "~0.1",
        "mozillal10n/cache": "~0.1",
        "pascalc/tinyl10n" : "~0.1",
        "pascalc/vcs": "~0.1"
    },

    "require-dev": {
        "atoum/atoum" : "~1.1",
        "symfony/var-dumper": "~2.6",
        "fabpot/php-cs-fixer": "~1.4",
        "pchevrel/verif": "0.1"
    },

    "autoload": {
        "psr-0": {"Transvision": "app/classes/"},
        "files": ["app/helpers/debug.php"]
